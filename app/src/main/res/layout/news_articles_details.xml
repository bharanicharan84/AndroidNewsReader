<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_article_thumbnail"
        android:layout_width="@dimen/img_width"
        android:layout_height="@dimen/img_height"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/news_article_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/img_article_thumbnail"
        android:text="NEWS ID" />

    <TextView
        android:id="@+id/news_article_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_article_id"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/img_article_thumbnail"
        android:text="NEWS ID" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_article_thumbnail"
        android:layout_marginLeft="10dp"
        android:text="Description : "
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/news_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_article_thumbnail"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/description"
        android:textSize="16sp" />


</RelativeLayout>
